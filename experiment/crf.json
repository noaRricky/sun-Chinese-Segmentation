{
    "dataset_reader": {
        "type": "people2014"
    },
    "validation_dataset_reader": {
        "type": "people2014"
    },
    "train_data_path": "./corpus/people/train.txt",
    "validation_data_path": "./corpus/people/valid.txt",
    "model": {
        "type": "crf_tagger",
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 128
                }
            }
        },
        "encoder": {
            "type": "lstm",
            "input_size": 128,
            "hidden_size": 128,
            "num_layers": 1,
            "bidirectional": true
        },
        "label_namespace": "labels",
        "dropout": 0.1
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 128,
        "sorting_keys": [
            [
                "tokens",
                "num_tokens"
            ]
        ]
    },
    "trainer": {
        "num_epochs": 25,
        "patience": 8,
        "cuda_device": 2,
        "validation_metric": "+accuracy",
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        }
    }
}
