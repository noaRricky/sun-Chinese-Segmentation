{
  "train_data_path": "./corpus/people/train.txt",
  "validation_data_path": "./corpus/people/valid.txt",
  "dataset_reader": {
    "type": "people2014"
  },
  "model": {
    "type": "simple_tagger",
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 6
        }
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 6,
      "hidden_size": 6,
      "num_layers": 1,
      "dropout": 0.2,
      "bidirectional": true
    }
  },
  "iterator": {
    "type": "basic",
    "batch_size": 2
  },
  "trainer": {
    "num_epochs": 40,
    "patience": 10,
    "cuda_device": -1,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adam"
    }
  }
}
