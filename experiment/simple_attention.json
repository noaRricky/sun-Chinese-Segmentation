{
    "train_data_path": "./corpus/people/train.txt",
    "validation_data_path": "./corpus/people/valid.txt",
    "dataset_reader": {
        "type": "people2014"
    },
    "model": {
        "type": "simple_tagger",
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 128
                }
            }
        },
        "encoder": {
            "type": "stacked_self_attention",
            "input_dim": 128,
            "hidden_dim": 128,
            "projection_dim": 128,
            "feedforward_hidden_dim": 128,
            "num_layers": 1,
            "num_attention_heads": 8,
            "use_positional_encoding": true,
            "dropout_prob": 0.1,
            "residual_dropout_prb": 0.2,
            "attention_dropout_prob": 0.1
        }
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 128,
        "sorting_keys": [
            [
                "tokens",
                "num_token"
            ]
        ]
    },
    "trainer": {
        "num_epochs": 15,
        "patience": 5,
        "cuda_device": 1,
        "validation_metric": "+accuracy",
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        }
    }
}
