{
  "train_data_path": "../corpus/people/train.txt",
  "validation_data_path": "../corpus/people/valid.txt",
  "dataset_reader": {
    "type": "people2014"
  },
  "model": {
    "type": "simple_tagger",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 256,
        "trainable": true
      }
    },
    "encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 256,
      "hidden_size": 124,
      "num_layers": 1,
      "dropout": 0.2
    }
  },
  "iterator": {
    "type": "bucket",
    "batch_size": 124,
    "sorting_keys": [
      [
        "sentence",
        "num_tokens"
      ]
    ]
  },
  "trainer": {
    "num_epochs": 1000,
    "patience": 10,
    "cuda_device": 1,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adam"
    }
  }
}
